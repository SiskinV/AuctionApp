@model AuctionApp.Models.Database.Auction
@{
    ViewData["Title"] = "Edit auction";
}


<h1>Auction info</h1>
<div class="row">
    <div class="col-xl-4">
        <form asp-action="EditAuction" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for='id' type='hidden'>
            <input asp-for='userId' type='hidden'>
            <input asp-for='image' type='hidden'>
            <input asp-for='dateCreate' type='hidden' value='@Model.dateCreate'>
            <input asp-for='state' type='hidden'>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateOpen" class="control-label"></label>
                <input asp-for="dateOpen" class="form-control" />
                <span asp-validation-for="dateOpen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="dateExpire" class="control-label"></label>
                <input asp-for="dateExpire" class="form-control" />
                <span asp-validation-for="dateExpire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="startPrice" class="control-label"></label>
                <input asp-for="startPrice" class="form-control" />
                <span asp-validation-for="startPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Confirm changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>